@model IEnumerable<WebShop_ASPNetCore8MVC_v1.ViewModels.MenuLoaiVM>
<div class="col-lg-12">
    <div class="mb-3">
        <h4>Categories</h4>
        <ul class="list-unstyled fruite-categorie">
            @foreach(var loaiVM in Model)
            {
                <li>
                    <div class="d-flex justify-content-between fruite-name">
                        <a asp-controller="HangHoa" asp-action="Index" asp-route-loai="@loaiVM.MaLoai">
                            <i class="fas fa-apple-alt me-2"></i>
                            @loaiVM.TenLoai
                        </a>
                        <span>(@loaiVM.SoLuong)</span>
                    </div>
                </li>
            }
           
           
        </ul>
    </div>
</div>