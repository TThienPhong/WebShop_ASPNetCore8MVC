@functions {
    private string DetermineLayout()
    {
        var authScheme = Context.Request.Cookies["Admin"];
        if (authScheme!=null)
        {
            return "_LayoutAdmin";
        }
        else
        {
            return "_Layoutcustomer";
        }
    }
}